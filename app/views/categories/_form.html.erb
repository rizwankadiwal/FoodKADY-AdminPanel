<div class="row">
  <div class="col-md-12">
    <div class="white-box">
      <div class="row">
        <%= form_with(model: category, local: true, html: { multipart: true }) do |form| %>
          <div class="col-sm-12">
            <div class="white-box">
              <% if category.errors.any? %>
                <div id="error_explanation">
                  <h2><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>

                  <ul>
                    <% @category.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              <% end %>
              <form class="form">
                <div class="form-group row">
                  <%= form.label :category_name, :class=>'col-2 col-form-label' %>
                  <div class="col-10">
                    <%= form.text_field :category_name, :id=>'example-text-input' %>
                  </div>
                </div>
                <div class="form-group row">
                  <label class="col-2 col-form-label">Input Select</label>
                  <div class="col-10">
                    <%= form.collection_select :parent_id,
                                               Category.all,
                                               :id,
                                               :category_name,
                                               :include_blank=>true, :class=>'custom-select col-10'%>
                  </div>
                </div>
                <div class="form-group row">
                  <%= form.label :category_image, :class=>'col-2 col-form-label'%>
                  <div class="col-10">
                    <%= form.file_field :category_image%>
                  </div>
                </div>
                <div class="col-6">
                  <%= form.submit 'Save', :class=> 'btn btn-block btn-success btn-rounded' %>
                </div>
              </form>
            </div>
          </div>
        <%end%>
      </div>
    </div>
  </div>
</div>