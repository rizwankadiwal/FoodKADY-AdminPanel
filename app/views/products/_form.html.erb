<div class="container-fluid">
  <div class="row bg-title">
    <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
      <h4 class="page-title">Product</h4> </div>
    <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12"> <a href="https://themeforest.net/item/elite-admin-responsive-dashboard-web-app-kit-/16750820" target="_blank" class="btn btn-danger pull-right m-l-20 btn-rounded btn-outline hidden-xs hidden-sm waves-effect waves-light">Buy Now</a>
      <ol class="breadcrumb">
        <li><a href="#">Dashboard</a></li>
        <li class="active">Product</li>
      </ol>
    </div>
    <!-- /.col-lg-12 -->
  </div>
  <!-- /.row -->
  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-info">
        <div class="panel-wrapper collapse in" aria-expanded="true">
          <div class="panel-body">
            <%= form_with(model: product, local: true, html: { multipart: true }) do |form| %>
              <% if product.errors.any? %>
                <div id="error_explanation">
                  <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>
                  <ul>
                    <% product.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              <% end %>
              <div class="form-body">

                <div class="row">
                  <div class="col-md-6">
                    <div class="form-group">
                      <%= form.label :product_name, :class=> 'control-label' %>
                      <%= form.text_field :product_name, id: 'firstName', class: 'form-control', placeholder: 'Apple, Banana' %>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group">
                      <%= form.label :sku, :class=> 'control-label' %>
                      <%= form.text_field :sku, class: 'form-control', placeholder: 'FD0123456789' %>
                    </div>
                  </div>
                </div>

                <div class="row">
                  <div class="col-md-6">
                    <div class="form-group">
                      <%= form.label :price %>
                      <div class="input-group">
                        <div class="input-group-addon"><i class="ti-money"></i></div>
                        <%= form.text_field :price, class: 'form-control', placeholder: '$12.99' %>
                      </div>
                    </div>
                  </div>
                  <!--/span-->
                  <div class="col-md-6">
                    <div class="form-group">
                      <%= form.label :cost %>
                      <div class="input-group">
                        <div class="input-group-addon"><i class="ti-money"></i></div>
                        <%= form.text_field :cost, class: 'form-control', placeholder: '$7.99' %>
                      </div>
                    </div>
                  </div>
                  <!--/span-->
                </div>

                <div class="row">
                  <div class="col-md-6">
                    <div class="form-group">
                      <%= form.label :taxable_class, class:'control-label' %>
                      <div class="radio-list">
                        <label class="radio-inline p-0">
                          <div class="radio radio-info">
                            <%= form.radio_button :taxable_class, "1", id: 'radio1'%>
                            <label for="radio1">Taxable</label>
                          </div>
                        </label>
                        <label class="radio-inline">
                          <div class="radio radio-info">
                            <%= form.radio_button :taxable_class, "0", id: 'radio1'%>
                            <label for="radio2">Non-taxable</label>
                          </div>
                        </label>
                      </div>
                    </div>
                  </div>

                  <!--/span-->
                  <div class="col-md-6">
                    <div class="form-group">
                      <%= form.label :is_available, class:'control-label' %>
                      <div class="radio-list">
                        <label class="radio-inline p-0">
                          <div class="radio radio-info">
                            <%= form.radio_button :is_available, "1", id: 'radio1'%>
                            <label for="radio1">Active</label>
                          </div>
                        </label>
                        <label class="radio-inline">
                          <div class="radio radio-info">
                            <%= form.radio_button :is_available, "0", id: 'radio1'%>
                            <label for="radio2">Inactive</label>
                          </div>
                        </label>
                      </div>
                    </div>
                  </div>
                  <!--/span-->
                </div>

                <!-- For Category (In Testing)
                <div class="row">
                  < Admin::Category.all.each do |category| %>
                    <div>
                      <= hidden_field_tag "product[categories_ids][]", nil%>
                      <= check_box_tag "product[categories_ids][]", category.id %>
                      <= label_tag category.category_name %>
                    </div>
                  < end %>
                </div> -->


                <div class="row">
                  <div class="col-md-12 ">
                    <%= form.label :description%>
                    <div class="form-group">
                      <%= form.text_area :description, class:'form-control', rows:'4',  id: :product_description %>
                    </div>
                  </div>
                </div>

                <div class="row">
                  <div class="col-md-12 ">
                    <%= form.label :notes%>
                    <div class="form-group">
                      <%= form.text_area :notes, class:'form-control', rows:'4',  id: :product_notes %>
                    </div>
                  </div>
                </div>

                <div class="row">
                  <div class="col-md-6">
                    <%= form.label :stock_quantity, class:'control-label' %>
                    <div class="form-group">
                      <%= form.text_field :stock_quantity, id: :product_stock_quantity, class: 'form-control'%>
                    </div>
                  </div>

                  <div class="col-md-6">
                    <%= form.label :product_image, class: 'control-label' %>
                    <div class="form-group">
                      <%= form.file_field :product_image, id: :product_image, class: 'form-control'%>
                    </div>
                  </div>
                </div>
              </div>

              <div class="row">
                <div class="col-md-6">
                  <% Category.all.each do |category| %>
                    <%= check_box_tag "product[category_ids][]", category.id, form.object.categories.include?(category) %>
                    <%= category.category_name %>
                  <% end %>
                </div>
              </div>


                <div class="form-actions m-t-40">
                  <button type="submit" class="btn btn-success"> <i class="fa fa-check"></i> Save</button>
                  <%= link_to products_path do %>
                    <button type="button" class="btn btn-default">Cancel</button>
                  <%end%>
                </div>

            <%end%>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!--row -->
  </div>
</div>
